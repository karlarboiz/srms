<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('include/header',{
    Title: "Signup"
  }) %>
    <script src="/scripts/signup-student__script.js" defer></script>
  
</head>
<body>
    <%- include('include/nav') %>

    <% if(inputData.error) {%>
      <h5 class="text-center container-fluid mx-auto signup__message"><%=inputData.message%></h5>
    <%}%>
    <form action="/signup/save" method="POST" enctype="multipart/form-data" class="container mx-auto col-lg-6 mt-5 signup text-center">
      <input type="hidden" value="<%= locals.csrfToken %>" name="_csrf">
      <h5 class="text-center signup__header">Sign Up as:</h5>
      <div class="mt-3 mb-3">

        <select class="form-select" name="designation" aria-label="Default select example">

          <% for(const data of designation) {%>
            <option value="<%=data._id%>"><%=data.position%></option>
          <%}%>
        </select>

      </div>

      <div class="form-floating mb-3 mt-3">
        <input type="text" class="form-control" id="fname" placeholder="Enter First Name" value="<%=inputData.name.fname%>" name="fname" required>
        <label for="fname">First Name</label>
      </div>

      <div class="form-floating mb-3 mt-3">
        <input type="text" class="form-control" id="mname" placeholder="Enter Middle Name" value="<%=inputData.name.mname%>" name="mname" required>
        <label for="mname">Middle Name</label>
      </div>

      <div class="form-floating mb-3 mt-3">
        <input type="text" class="form-control" id="lname" placeholder="Enter Last Name" value="<%=inputData.name.lname%>" name="lname" required>
        <label for="lname">Last Name</label>
      </div>
     
      <div class="form-floating mb-3 mt-3">
        <input type="email" class="form-control" id="email" placeholder="Enter Email" value="<%=inputData.email%>" name="email" required>
        <label for="email">Email</label>
      </div>

      <div class="form-floating mt-3 mb-3">
        <input type="password" class="form-control" id="pwd" placeholder="Enter password" name="pwd" required>
        <label for="pwd">Password</label>
      </div>

      <div class="form-floating mb-3 mt-3">
        <input type="text" class="form-control" id="username" placeholder="Enter Username" value="<%=inputData.username%>" name="username" required>
        <label for="username">Username</label>
      </div>

      
      <div class="form-floating mt-3 mb-3">
        <input type="text" class="form-control" id="code" placeholder="Enter password" name="code" required>
        <label for="code">Code</label>
      </div>

      <div class="mt-3 mb-3">
        <input id="img" type="file" name="img" accept="image/png, image/jpeg" required>
      </div>

      <div class="mt-3 mb-3">
        <input type="submit" value="Sign Up" class="signup__btn">
      </div>
    </form>

    <div class="container mx-auto col-lg-5 text-center">
      <img alt="This is the Student's Photo" id="img-output" class="mx-auto">
    </div>

    <%- include('include/bootstrapfunctionalities') %>
</body>
</html>